# Backend environment variables (local/dev)

# DB dialect: mssql (default) or postgres
DB_DIALECT=mssql

# MSSQL (if using mssql)
DB_HOST=localhost
DB_NAME=master
DB_USER=sa
DB_PASS=Your_password123
DB_PORT=1433
DB_SSL=false

# Supabase / Postgres (preferred)
SUPABASE_DB_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
# Optional: Supabase pooler/session connection string
# SUPABASE_POOLER_URL=postgresql://postgres:YOUR_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres
# Or use POSTGRES_URL instead:
# POSTGRES_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

PORT=4000

# CORS (optional)
FRONTEND_URL=http://localhost:5173
# FRONTEND_URLS=http://localhost:5173,http://localhost:3000

# Auth (JWT)
JWT_SECRET=change-me
JWT_ISSUER=sca-requests
JWT_EXPIRES_IN=12h
AUTH_MAX_FAILED=5
AUTH_LOCK_MINUTES=15

# Workflow mode / N8N
MODE_TYPE=N8N
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...
APPEALS_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...

# Travel time API (backend only)
TRAVEL_API_PROVIDER=OpenRouteService
TRAVEL_API_URL=https://api.openrouteservice.org/v2/directions/driving-car
TRAVEL_API_KEY=
